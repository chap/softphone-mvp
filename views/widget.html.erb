<style type="text/css" media="screen">
  #softphone-outer-container {
    overflow: hidden;
    position: fixed;
    top:0;
    right:0;
    height: 72px;
    width: 330px;
    box-sizing: content-box;
    z-index: 9999;
  }
  #softphone {
    height: 72px;
    width: 330px;
    position: fixed;
    top: 0;
    right: -280px;
    font: 12px/1.7em Arial, Garuda, sans-serif;
    border: 1px solid rgba(126, 163, 174, 0.3);
    border-top: none;
    border-right: none;
    border-bottom-left-radius: 3px;
    box-shadow: 0px 2px 5px rgba(0,0,0,0.25);
  }
  #softphone.active {
    box-shadow: 0px 2px 10px rgba(0,0,0,0.75);
    border-color: rgba(255, 255, 255, 0.3);
  }
  #inputs-container {
    background: #7ea3ae;
    float: left;
    padding: 10px;
    padding-left: 0;
    width: 270px;
    height: 52px;
  }
  #softphone a.tab {
    background-color: #7ea3ae;
    background-image: url('//<%= request.host_with_port %>/images/phone.png');
    background-position: center;
    background-size: 40%;
    background-repeat: no-repeat;
    display: block;
    float: left;
    height: 72px;
    width: 50px;
    opacity: 0.75;
    border-bottom-left-radius: 3px;
  }
  #softphone a.tab:hover, #softphone.active a.tab {
    opacity:  1.0;
  }
  #softphone.active a.tab:hover {
    opacity:  0.75;
  }
  #softphone #outbound-number {
    margin: 0;
    margin-bottom: 5px;
    padding: 5px;
    width: 135px;
  }
  #softphone #log {
    text-shadow: -1px -1px 1px rgba(0,0,0,0.4);
    color: white;
    font-size: 11px;
  }
</style>
<div id="softphone-outer-container">
  <div id="softphone" data-twilio-token="<%= @token %>" style="display:none;">
    <a href="#" class="tab"></a>
    <div id="inputs-container">
      <input type="text" id="outbound-number" placeholder="enter a phone number"/>
      <button id="call">Call</button>
      <button id="hangup" disabled="disabled">Hangup</button>
      <div id="log">initializing</div>
    </div>
  </div>
</div>
