<style type="text/css" media="screen">
  #softphone {
    background: #5881a8;
    height: 52px;
    padding: 10px;
    width: 285px;
    position: absolute;
    bottom:0;
    right: -261px;
    box-sizing: content-box;

    font-family: Arial, Garuda, sans-serif;
    font-size: 12px;
  }
  #softphone a {
    display: block;
    float: left;
    padding-top: 15px;
    padding-right: 10px;
  }
